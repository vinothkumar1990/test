<html>
<head>
  <style>
table{
  background-color: white;
}
.pending{
 background-color: #358435;
}
.compled{
background-color: #CE3737;
}
  </style>
</head>
<body>
  <%@articles=Article.all%>
  
<table align="center">
  <%@articles.in_groups_of(3,false) do |articles|%>
  <% articles.each_with_index do |article,i| %>
    <tr <%if article.status=="pending"%>class="pending"<%else%>class="compled"<%end%>>
    <td <%article.id%>><%=i+1%></td>
   </tr>
  <%end%>
  <%end%>
</table>

</body>
</html>